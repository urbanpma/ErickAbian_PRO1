<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/VerdeOscuro</item>
        <item name="colorPrimaryDark">@color/VerdeOscuro</item>
        <item name="colorAccent">@color/VerdeClaro</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/VerdeOscuro</item>
        <item name="colorPrimaryDark">@color/VerdeOscuro</item>
        <item name="colorAccent">@color/VerdeClaro</item>
        <item name="android:windowBackground">@drawable/splash_activity_backgroud</item>
    </style>

    <style name="RedProgressbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/VerdeOscuro</item>
        <item name="colorPrimaryDark">@color/VerdeOscuro</item>
        <item name="colorAccent">@color/VerdeOscuro</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>